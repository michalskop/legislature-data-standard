{
  "$ref": "#/definitions/PopoloOrganization",
  "definitions": {
    "PopoloOrganization": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "description": "Primary name."
