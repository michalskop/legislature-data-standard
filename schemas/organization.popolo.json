        "other_names": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "note": {
                "type": "string"
              },
              "start_date": {
                "type": "string"
              },
              "end_date": {
                "type": "string"
              }
            },
            "required": [
              "name"
            ],
            "additionalProperties": false
          },
          "description": "Alternate and former names."
        },
        "identifiers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "scheme": {
                "type": "string"
              },
              "identifier": {
                "type": "string"
              }
            },
            "required": [
              "scheme",
              "identifier"
            ],
            "additionalProperties": false
          }
        },
        "classification": {
          "type": "string",
          "description": "Organizational category, e.g., committee, party."
        },
        "parent": {
          "type": "string",
