            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "format": "uri"
              },
              "note": {
                "type": "string"
              }
            },
            "required": [
              "url"
            ],
            "additionalProperties": false
          }
        },
        "created_at": {
          "type": "string"
        },
        "updated_at": {
          "type": "string"
